#include<iostream>
using namespace std;

int main() {
 
    cout << "Enter 5 elements for the array: ";
    for(i = 0; i < 5; i++) {
        cin >> arr[i];
    }
   
    cout << "The original array: ";
    for(i = 0; i < 5; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
    cout << "The reverse of the given array: ";
    for(i = 4; i >= 0; i--) {
        cout << arr[i] << " ";
    }
    cout << endl;
    
    return 0;
}

#include <iostream>
#include <cmath>
using namespace std;
int main() {
    float floatingNumber;
    cout << "Enter a floating-point number: ";
    cin >> floatingNumber;
    int roundedDown = floor(floatingNumber);
    int roundedUp = ceil(floatingNumber);
    cout << "Original Number: " << floatingNumber << endl;
    cout << "Rounded Down: " << roundedDown << " (using floor)" << endl;
    cout << "Rounded Up: " << roundedUp << " (using ceil)" << endl;
    return 0;
}
